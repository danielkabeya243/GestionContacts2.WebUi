@{
    ViewBag.Title = "Contact";
    ViewBag.Message = "Contactez-nous";
}

<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    *, *::before, *::after {
        box-sizing: border-box;
    }

    :root {
        --green: #22c55e;
        --dark: #0d1117;
        --white: #ffffff;
        --gray: #9ca3af;
        --border: #e5e7eb;
        --label: #6b7280;
    }

    .contact-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
      
    }

    .contact-card {
        display: grid;
        grid-template-columns: 1fr 1.2fr;
        width: 100%;
        max-width: 900px;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 25px 60px rgba(0,0,0,0.18);
        animation: fadeUp 0.6s ease both;
    }

    @@keyframes fadeUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ── PANNEAU GAUCHE ── */
    .contact-left {
        position: relative;
        background: var(--dark);
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        gap: 2.5rem;
        overflow: hidden;
    }

        .contact-left .building-bg {
            position: absolute;
            inset: 0;
            background: linear-gradient(135deg, #0d1117 0%, #1a2332 40%, #0d1117 100%);
        }

            .contact-left .building-bg::before {
                content: '';
                position: absolute;
                top: -10%;
                left: -20%;
                width: 140%;
                height: 80%;
                background: repeating-linear-gradient( -15deg, transparent 0px, transparent 28px, rgba(255,255,255,0.03) 28px, rgba(255,255,255,0.03) 30px );
                transform: skewY(-5deg);
            }

            .contact-left .building-bg::after {
                content: '';
                position: absolute;
                inset: 0;
                background: linear-gradient(to bottom, rgba(13,17,23,0.3) 0%, rgba(13,17,23,0.8) 100%);
            }

    .info-block {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        animation: fadeUp 0.7s ease both;
    }

        .info-block:nth-child(2) {
            animation-delay: 0.1s;
        }

        .info-block:nth-child(3) {
            animation-delay: 0.2s;
        }

    .info-icon {
        width: 20px;
        height: 20px;
        flex-shrink: 0;
        margin-top: 2px;
        color: var(--white);
        opacity: 0.9;
    }

    .info-block-title {
        font-family: 'DM Sans', sans-serif;
        font-weight: 500;
        font-size: 1rem;
        color: var(--white);
        margin-bottom: 0.3rem;
        letter-spacing: 0.01em;
    }

    .info-block-text {
        font-size: 0.82rem;
        color: var(--gray);
        line-height: 1.6;
        margin: 0;
    }

    .info-block-link {
        color: var(--green) !important;
        text-decoration: none;
        font-size: 0.85rem;
        transition: opacity 0.2s;
    }

        .info-block-link:hover {
            opacity: 0.75;
        }

    /* ── PANNEAU DROIT ── */
    .contact-right {
        background: var(--white);
        padding: 3rem 2.8rem;
    }

        .contact-right h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 2rem;
            letter-spacing: -0.01em;
            text-align: left;
        }

    .contact-form-group {
        margin-bottom: 1.4rem;
    }

    .contact-label {
        display: block;
        font-size: 0.7rem;
        font-weight: 500;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--label);
        margin-bottom: 0.5rem;
        font-family: 'DM Sans', sans-serif;
    }

    .name-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
    }

    .contact-input, .contact-textarea {
        width: 100%;
        border: none !important;
        border-bottom: 1.5px solid var(--border) !important;
        border-radius: 0 !important;
        padding: 0.55rem 0 !important;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.88rem;
        color: #374151;
        background: transparent !important;
        outline: none;
        box-shadow: none !important;
        transition: border-color 0.25s;
    }

        .contact-input::placeholder, .contact-textarea::placeholder {
            color: #c9cdd4;
            font-size: 0.85rem;
        }

        .contact-input:focus, .contact-textarea:focus {
            border-bottom-color: var(--green) !important;
            box-shadow: none !important;
        }

    .contact-textarea {
        resize: vertical;
        min-height: 80px;
    }

    .contact-btn {
        margin-top: 1.8rem;
        background: var(--green) !important;
        color: white !important;
        border: none !important;
        padding: 0.8rem 2.2rem !important;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem !important;
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        cursor: pointer;
        border-radius: 2px !important;
        transition: background 0.2s, transform 0.15s;
    }

        .contact-btn:hover {
            background: #16a34a !important;
            transform: translateY(-1px);
        }

    @@media (max-width: 640px) {
        .contact-card {
            grid-template-columns: 1fr;
        }

        .contact-left {
            padding: 2.5rem 2rem;
            min-height: 280px;
        }

        .name-row {
            grid-template-columns: 1fr;
        }
    }
</style>

