@{
    ViewBag.Title = "About";
    ViewBag.Message = "À propos";
}

<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    :root {
        --green: #22c55e;
        --dark: #0d1117;
        --white: #ffffff;
        --gray: #9ca3af;
        --border: #e5e7eb;
    }

    .about-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: stretch;
        justify-content: center;
        padding: 0;
    }

    .about-card {
        display: grid;
        grid-template-columns: 0.8fr 1.2fr;
        width: 100%;
       /* max-width: 950px;*/
        border-radius: 0;
        overflow: hidden;
        box-shadow: none;
        animation: aboutFadeUp 0.6s ease both;
    }

    @@keyframes aboutFadeUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ── PANNEAU GAUCHE ── */
    .about-left {
        position: relative;
        background: var(--dark);
        padding: 3rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        gap: 1.5rem;
        overflow: hidden;
    }

    .about-building {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #0d1117 0%, #1a2332 40%, #0d1117 100%);
    }

        .about-building::before {
            content: '';
            position: absolute;
            top: -10%;
            left: -20%;
            width: 140%;
            height: 80%;
            background: repeating-linear-gradient( -15deg, transparent 0px, transparent 28px, rgba(255,255,255,0.03) 28px, rgba(255,255,255,0.03) 30px );
            transform: skewY(-5deg);
        }

        .about-building::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, rgba(13,17,23,0.2) 0%, rgba(13,17,23,0.75) 100%);
        }

    .about-left-title {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 2rem;
        font-weight: 600;
        color: var(--white);
        line-height: 1.3;
    }

        .about-left-title span {
            color: var(--green);
        }

    .about-stat {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
        animation: aboutFadeUp 0.7s ease both;
    }

        .about-stat:nth-child(3) {
            animation-delay: 0.1s;
        }

        .about-stat:nth-child(4) {
            animation-delay: 0.2s;
        }

        .about-stat:nth-child(5) {
            animation-delay: 0.3s;
        }

    .about-stat-number {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2rem;
        font-weight: 600;
        color: var(--green);
        line-height: 1;
    }

    .about-stat-label {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        color: var(--gray);
        letter-spacing: 0.04em;
    }

    .about-divider {
        position: relative;
        z-index: 2;
        height: 1px;
        background: rgba(255,255,255,0.08);
        margin: 0.5rem 0;
    }

    /* ── PANNEAU DROIT ── */
    .about-right {
        background: var(--white);
        padding: 3rem 2.8rem;
    }

        .about-right h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.5rem;
            letter-spacing: -0.01em;
        }

    .about-subtitle {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.82rem;
        color: var(--gray);
        margin-bottom: 2rem;
        letter-spacing: 0.04em;
        text-transform: uppercase;
    }

    .about-desc {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.88rem;
        color: #4b5563;
        line-height: 1.8;
        margin-bottom: 2rem;
        border-left: 2px solid var(--green);
        padding-left: 1rem;
    }

    .about-features-title {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.68rem;
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: #6b7280;
        margin-bottom: 1rem;
    }

    .about-features {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
        margin-bottom: 2rem;
    }

    .about-feature-item {
        display: flex;
        align-items: flex-start;
        gap: 0.6rem;
        padding: 0.75rem;
        border: 1px solid var(--border);
        border-radius: 3px;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .about-feature-item:hover {
            border-color: var(--green);
            box-shadow: 0 2px 12px rgba(34,197,94,0.08);
        }

    .about-feature-dot {
        width: 7px;
        height: 7px;
        border-radius: 50%;
        background: var(--green);
        flex-shrink: 0;
        margin-top: 5px;
    }

    .about-feature-text {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.8rem;
        color: #374151;
        line-height: 1.5;
    }

    .about-cta {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        font-weight: 500;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--green);
        text-decoration: none;
        border-bottom: 1px solid var(--green);
        padding-bottom: 2px;
        transition: opacity 0.2s;
    }

        .about-cta:hover {
            opacity: 0.7;
            color: var(--green);
        }

    @@media (max-width: 700px) {
        .about-card {
            grid-template-columns: 1fr;
        }

        .about-left {
            min-height: 220px;
            padding: 2rem;
        }

        .about-features {
            grid-template-columns: 1fr;
        }

        .about-right {
            padding: 2rem 1.5rem;
        }
    }
</style>

<main aria-labelledby="about-title">
    <div class="about-wrapper">
        <div class="about-card">

            <!-- PANNEAU GAUCHE -->
            <div class="about-left">
                <div class="about-building"></div>

                <p class="about-left-title">Gérez vos<br><span>contacts</span><br>en toute simplicité</p>

                <div class="about-divider"></div>

                <p style="position:relative;z-index:2;font-family:'DM Sans',sans-serif;font-size:0.82rem;color:#9ca3af;line-height:1.7;">
                    Créez votre compte, ajoutez vos premiers contacts et organisez-les en quelques clics.
                </p>

                <div class="about-stat">
                    <span class="about-stat-label" style="color:#22c55e;font-size:0.78rem;">🔒 Vos contacts sont privés et accessibles uniquement par vous.</span>
                </div>
            </div>

            <!-- PANNEAU DROIT -->
            <div class="about-right">
                <h2 id="about-title">@ViewBag.Title</h2>
                <p class="about-subtitle">@ViewBag.Message</p>

                <p class="about-desc">
                    Une application simple et sécurisée pour centraliser tous vos contacts personnels et professionnels en un seul endroit.
                    Ajoutez, modifiez, recherchez et organisez vos contacts à tout moment, depuis n'importe quel appareil.
                </p>

                <p class="about-features-title">Ce que vous pouvez faire</p>

                <div class="about-features">
                    <div class="about-feature-item">
                        <div class="about-feature-dot"></div>
                        <span class="about-feature-text">Ajouter, modifier et supprimer vos contacts</span>
                    </div>
                    <div class="about-feature-item">
                        <div class="about-feature-dot"></div>
                        <span class="about-feature-text">Rechercher rapidement un contact</span>
                    </div>
                    <div class="about-feature-item">
                        <div class="about-feature-dot"></div>
                        <span class="about-feature-text">Accéder à vos contacts en toute sécurité</span>
                    </div>
                    <div class="about-feature-item">
                        <div class="about-feature-dot"></div>
                        <span class="about-feature-text">Interface simple et accessible sur tous les appareils</span>
                    </div>
                </div>

                <a href="@Url.Action("Contact", "Home")" class="about-cta">
                    Une question ? Contactez-nous
                    <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                    </svg>
                </a>
            </div>

        </div>
    </div>
</main>
