@{
    ViewBag.Title = "Home Page";
}

<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    :root {
        --green: #22c55e;
        --dark: #0d1117;
        --white: #ffffff;
        --gray: #9ca3af;
        --border: #e5e7eb;
    }

    .home-wrapper {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* ── HERO ── */
    .home-hero {
        position: relative;
        background: var(--dark);
        padding: 5rem 3rem 4rem;
        overflow: hidden;
        flex-shrink: 0;
    }

    .home-hero-bg {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #0d1117 0%, #1a2332 50%, #0d1117 100%);
    }

        .home-hero-bg::before {
            content: '';
            position: absolute;
            top: -10%;
            left: -20%;
            width: 140%;
            height: 100%;
            background: repeating-linear-gradient( -15deg, transparent 0px, transparent 28px, rgba(255,255,255,0.025) 28px, rgba(255,255,255,0.025) 30px );
            transform: skewY(-3deg);
        }

        .home-hero-bg::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, rgba(13,17,23,0.1) 0%, rgba(13,17,23,0.6) 100%);
        }

    .home-hero-content {
        position: relative;
        z-index: 2;
        max-width: 1100px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .home-hero-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: clamp(2.2rem, 5vw, 3.5rem);
        font-weight: 600;
        color: var(--white);
        line-height: 1.2;
        margin: 0 0 0.75rem;
    }

        .home-hero-title span {
            color: var(--green);
        }

    .home-hero-sub {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.88rem;
        color: var(--gray);
        line-height: 1.7;
        max-width: 480px;
        margin: 0;
    }

    .home-hero-actions {
        display: flex;
        gap: 0.75rem;
        flex-wrap: wrap;
        align-items: center;
    }

    .btn-hero-primary {
        background: var(--green);
        color: white;
        border: none;
        padding: 0.7rem 1.8rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        font-weight: 500;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        text-decoration: none;
        border-radius: 2px;
        transition: background 0.2s, transform 0.15s;
        display: inline-block;
    }

        .btn-hero-primary:hover {
            background: #16a34a;
            color: white;
            transform: translateY(-1px);
        }

    .btn-hero-outline {
        background: transparent;
        color: white;
        border: 1px solid rgba(255,255,255,0.25);
        padding: 0.7rem 1.8rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        font-weight: 500;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        text-decoration: none;
        border-radius: 2px;
        transition: border-color 0.2s, color 0.2s;
        display: inline-block;
    }

        .btn-hero-outline:hover {
            border-color: var(--green);
            color: var(--green);
        }

    /* ── CONTENU PRINCIPAL ── */
    .home-body {
        flex: 1;
        background: #f9fafb;
        padding: 3rem;
    }

    .home-body-inner {
        max-width: 1100px;
        margin: 0 auto;
    }

    .home-section-label {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.68rem;
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--gray);
        margin-bottom: 1.2rem;
    }

    /* ── CARTES ── */
    .home-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 1.2rem;
        margin-bottom: 3rem;
    }

    .home-card {
        background: var(--white);
        border: 1px solid var(--border);
        border-radius: 3px;
        padding: 1.8rem;
        transition: border-color 0.2s, box-shadow 0.2s, transform 0.2s;
        animation: homeFadeUp 0.6s ease both;
    }

        .home-card:nth-child(2) {
            animation-delay: 0.1s;
        }

        .home-card:nth-child(3) {
            animation-delay: 0.2s;
        }

    @@keyframes homeFadeUp {
        from {
            opacity: 0;
            transform: translateY(16px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .home-card:hover {
        border-color: var(--green);
        box-shadow: 0 4px 20px rgba(34,197,94,0.08);
        transform: translateY(-2px);
    }

    .home-card-icon {
        width: 36px;
        height: 36px;
        background: rgba(34,197,94,0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 1rem;
    }

        .home-card-icon svg {
            width: 18px;
            height: 18px;
            color: var(--green);
        }

    .home-card-title {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.95rem;
        font-weight: 500;
        color: #111827;
        margin-bottom: 0.4rem;
    }

    .home-card-text {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.8rem;
        color: var(--gray);
        line-height: 1.6;
        margin-bottom: 1.2rem;
    }

    .home-card-link {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.75rem;
        font-weight: 500;
        letter-spacing: 0.07em;
        text-transform: uppercase;
        color: var(--green);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        transition: opacity 0.2s;
    }

        .home-card-link:hover {
            opacity: 0.7;
            color: var(--green);
        }

    /* ── SECTION RÉCENTS ── */
    .home-recent {
        background: var(--white);
        border: 1px solid var(--border);
        border-radius: 3px;
        padding: 1.8rem;
    }

    .home-recent-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border);
    }

    .home-recent-title {
        font-family: 'Cormorant Garamond', serif;
        font-size: 1.3rem;
        font-weight: 600;
        color: #111827;
        margin: 0;
    }

    .home-recent-empty {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.82rem;
        color: var(--gray);
        font-style: italic;
    }

    @@media (max-width: 640px) {
        .home-hero {
            padding: 3rem 1.5rem;
        }

        .home-body {
            padding: 2rem 1.5rem;
        }

        .home-hero-content {
            flex-direction: column;
            align-items: flex-start;
        }
    }
</style>

<main class="home-wrapper" aria-labelledby="home-title">

    <!-- ── HERO ── -->
    <div class="home-hero">
        <div class="home-hero-bg"></div>
        <div class="home-hero-content">
            <div>
                <h1 class="home-hero-title" id="home-title">
                    Gestion de<br><span>contacts</span>
                </h1>
                <p class="home-hero-sub">
                    Centralisez vos contacts personnels et professionnels en un seul endroit, simple et sécurisé.
                </p>
            </div>

            @if (!Request.IsAuthenticated)
            {
                <div class="home-hero-actions">
                    <a href="@Url.Action("Login", "Auth")" class="btn-hero-outline">Se connecter</a>
                    <a href="@Url.Action("Create", "Users")" class="btn-hero-primary">Créer un compte</a>
                </div>
            }
            else
            {
                <div class="home-hero-actions">
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Create", "Users")" class="btn-hero-primary">+ Nouvel utilisateur</a>
                    }
                    else if (User.IsInRole("User"))
                    {
                        <a href="@Url.Action("AjouterContact", "Contact")" class="btn-hero-primary">+ Nouveau contact</a>
                    }
                </div>
            }
        </div>
    </div>

    <!-- ── BODY ── -->
    @if (Request.IsAuthenticated)
    {
        <div class="home-body">
            <div class="home-body-inner">

                <p class="home-section-label">Accès rapide</p>

                <div class="home-cards">
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="home-card">
                            <div class="home-card-icon">
                                <svg fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a4 4 0 00-5-3.87M9 20H4v-2a4 4 0 015-3.87m6-4.13a4 4 0 11-8 0 4 4 0 018 0z" />
                                </svg>
                            </div>
                            <p class="home-card-title">Utilisateurs</p>
                            <p class="home-card-text">Voir et gérer tous les utilisateurs inscrits sur la plateforme.</p>
                            <a href="@Url.Action("TousLesUtilisateurs", "Users")" class="home-card-link">
                                Gérer les utilisateurs
                                <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        </div>
                    }

                    <div class="home-card">
                        <div class="home-card-icon">
                            <svg fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                            </svg>
                        </div>
                        <p class="home-card-title">Contacts</p>
                        <p class="home-card-text">Consultez et gérez la liste de vos contacts.</p>
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("TousLesContacts", "Contact")" class="home-card-link">
                                Tous les contacts
                                <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        }
                        /*Plus robuste — fonctionne même si le rôle n'est pas assigné */
                        else
                        {
                            <a href="@Url.Action("MesContacts", "Contact")" class="home-card-link">
                                Mes contacts
                                <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        }
                    </div>

                    <div class="home-card">
                        <div class="home-card-icon">
                            <svg fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                            </svg>
                        </div>
                        <p class="home-card-title">Action rapide</p>
                        <p class="home-card-text">
                            @if (User.IsInRole("Admin"))
                            {
                                @:Créer un nouvel utilisateur sur la plateforme.
                            }
                            else
                            {
                                @:Ajouter un nouveau contact à votre liste.
                            }
                        </p>
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Create", "Users")" class="home-card-link">
                                Nouvel utilisateur
                                <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        }
                        else 
                        {
                            <a href="@Url.Action("AjouterContact", "Contact")" class="home-card-link">
                                Nouveau contact
                                <svg width="12" height="12" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        }
                    </div>
                </div>

                <!-- RÉCENTS -->
                <div class="home-recent">
                    <div class="home-recent-header">
                        <h2 class="home-recent-title">Récents</h2>
                    </div>
                    <p class="home-recent-empty">Les derniers contacts ajoutés apparaîtront ici.</p>
                </div>

            </div>
        </div>
    }

</main>
