@model IEnumerable<GestionContacts2.WebUi.Models.ContactAdminViewModel>

@{
    ViewBag.Title = "TousLesContacts";
}

@if (ViewBag.MessageErreur != null)
{
    <div class="alert alert-warning text-center">@ViewBag.MessageErreur</div>
}

<h2 class="text-center mb-4">
    <i class="bi bi-people-fill"></i> Liste des Contacts
</h2>



<div class="card shadow mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-4">
            @using (Html.BeginForm("TousLesContacts", "Contact", FormMethod.Get))
            {
                <div class="input-group " style="width: 75%;">
                    <input type="text" name="recherche" class="form-control" placeholder="Rechercher un contact..." value="@Request.QueryString["recherche"]" />
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i> Rechercher
                    </button>
                </div>
            }
            <a href="@Url.Action("ExportContactsJson", "Contact")" class="btn btn-outline-secondary ms-2">
                <i class="bi bi-download"></i> Exporter (JSON)
            </a>
        </div>

        <div class="table-responsive">

            <table class="table table-striped table-hover w-100 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="min-width:100px; white-space:nowrap;">Nom</th>
                        <th style="min-width:100px; white-space:nowrap;">Prénom</th>
                        <th style="min-width:180px; white-space:nowrap;">Email</th>
                        <th style="min-width:130px; white-space:nowrap;">Numéro de Téléphone</th>
                        <th style="min-width:150px; white-space:nowrap;">Adresse</th>
                        <th style="min-width:120px; white-space:nowrap;">Entreprise</th>
                        <th style="min-width:150px; white-space:nowrap;">Notes</th>
                        <th style="min-width:130px; white-space:nowrap;">Date de Création</th>
                        <th style="min-width:180px; white-space:nowrap;">Utilisateur associé (Email)</th>
                        <th style="min-width:140px; white-space:nowrap;">Utilisateur associé (Nom)</th>
                        <th  style="white-space:nowrap;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="11" class="text-center text-danger">Aucun contact trouvé.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var contact in Model)
                        {
                            <tr>
                                <td>@contact.Nom</td>
                                <td>@contact.Prenom</td>
                                <td style="white-space:nowrap;">@contact.Email</td>
                                <td style="white-space:nowrap;">@contact.Telephone</td>
                                <td>@contact.Adresse</td>
                                <td>@contact.Entreprise</td>
                                <td>@contact.NotesPersonnelles</td>
                                <td>@contact.DateCreation.ToString("yyyy-MM-dd")</td>
                                <td style="white-space:nowrap;">@contact.UtilisateurEmail</td>
                                <td style="white-space:nowrap;">@contact.UtilisateurNom</td>
                                <td>
                                    <a href="@Url.Action("Delete", "Contact", new { id = contact.Id })"
                                       class="btn btn-danger btn-sm"
                                       title="Supprimer"
                                       onclick="return confirm('Voulez-vous vraiment supprimer ce contact?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
