@model GestionContacts2.WebUi.Models.DetailsContactViewModel
@{
    ViewBag.Title = "DetailsContact";
}



<h2 class="text-center mb-4"><i class="bi bi-person-vcard"></i> Détails du Contact</h2>

<div class="card shadow mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <h3 class="card-title text-center mb-4">@Model.Nom @Model.Prenom</h3>
        <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item"><strong>Email :</strong> @Model.Email</li>
            <li class="list-group-item"><strong>Numéro de téléphone :</strong> @Model.NumeroTel</li>
            <li class="list-group-item"><strong>Adresse :</strong> @Model.Adresse</li>
            <li class="list-group-item"><strong>Entreprise :</strong> @Model.Entreprise</li>
            <li class="list-group-item"><strong>Notes :</strong> @Model.NotesPersonnelles</li>
            <li class="list-group-item"><strong>Date de création :</strong> @Model.DateCreation.ToString("yyyy-MM-dd HH:mm")</li>
            <li class="list-group-item"><strong>Date de modification :</strong> @(Model.DateModification.HasValue ? Model.DateModification.Value.ToString("yyyy-MM-dd HH:mm") : "-")</li>
        </ul>
        <div class="text-center">
            <a href="@Url.Action("MesContacts", "Contact")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>


