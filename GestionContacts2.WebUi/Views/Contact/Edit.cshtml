@model GestionContacts2.Data.Contact
@{
    ViewBag.Title = "Edit";
}

<h2>Modifier le contact</h2>

@using (Html.BeginForm("Edit", "Conta", FormMethod.Post))
{
    @Html.HiddenFor(model => model.ContactId)
    @*Le champs caché UserID est indispensable pour que la modification fonctionne
        Sans lui, la modification du contact ne sera pas prise en compte*@
    @Html.HiddenFor(model => model.UserId)

    <div class="form-group mb-3">
        <label>Nom :</label>
        @Html.TextBoxFor(model => model.Nom, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Nom)
    </div>
    <div class="form-group mb-3">
        <label>Prénom :</label>
        @Html.TextBoxFor(model => model.Prenom, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Prenom)
    </div>
    <div class="form-group mb-3">
        <label>Email :</label>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>
    <div class="form-group mb-3">
        <label>Numéro de téléphone :</label>
        @Html.TextBoxFor(model => model.NumeroTel, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NumeroTel)
    </div>
    <div class="form-group mb-3">
        <label>Adresse :</label>
        @Html.TextAreaFor(model => model.Adresse, 3, 40, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Adresse)
    </div>
    <div class="form-group mb-3">
        <label>Entreprise :</label>
        @Html.TextBoxFor(model => model.Entreprise, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Entreprise)
    </div>
    <div class="form-group mb-3">
        <label>Notes Personnelles :</label>
        @Html.TextBoxFor(model => model.NotesPersonnelles, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NotesPersonnelles)
    </div>

    <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
}

