@model IEnumerable<GestionContacts2.Data.ApplicationUser>
@{
    ViewBag.Title = "TousLesUtilisateurs";
}

<h2 class="mb-4">Tous Les Utilisateurs</h2>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>FirstName</th>
            <th>BirthDate</th>
            <th>Email</th>
            <th>Username</th>
            <th>PhoneNumber</th>
            <th>Registration Date</th>
            <th>EmailConfirmed</th>
            <th>Actions</th>



        </tr>

    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.FirstName</td>
                <td>@user.BirthDate.ToShortDateString()</td>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@user.PhoneNumber</td>
                <td>@user.RegistrationDate.ToShortDateString()</td>
                <td>@(user.EmailConfirmed ? "Oui" : "Non")</td>

                <td>
                    <a href="@Url.Action("Delete", "Users", new { id = user.Id })" class="btn btn-danger btn-sm"
                       onclick="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                        <i class="bi bi-trash"></i>  Supprimer
                    </a>
                    <a href="@Url.Action("Edit", "Users", new { id = user.Id })" class="btn btn-primary btn-sm">
                       <i class="bi bi-pencil"></i> Modifier
                    </a>

                </td>

            </tr>
        }



    </tbody>


</table>


