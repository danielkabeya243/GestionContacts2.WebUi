@model IEnumerable<GestionContacts2.WebUi.Models.UtilisateurAvecRolesViewModel>
@{
    ViewBag.Title = "TousLesUtilisateurs";
}

@if (ViewBag.MessageErreur != null)
{
    <div class="alert alert-warning text-center">@ViewBag.MessageErreur</div>
}

<h2 class="mb-4">Tous Les Utilisateurs</h2>
<div class="table-responsive">
    <table class="table table-striped table-hover w-100">
        <thead class="table-dark">
            <tr>
                <th style="min-width:120px;">Name</th>
                <th style="min-width:120px;">FirstName</th>
                <th style="min-width:110px;">BirthDate</th>
                <th style="min-width:200px;">Email</th>
                <th style="min-width:150px;">Username</th>
                <th style="min-width:130px;">PhoneNumber</th>
                <th style="min-width:140px;">Registration Date</th>
                <th style="min-width:110px;">EmailConfirmed</th>
                <th style="min-width:120px;">Rôles</th>
                <th style="min-width:140px;">Actions</th>
            </tr>
        </thead>
        <tbody>

            @if (!Model.Any())
            {
                <tr>
                    <td colspan="10" class="text-center">Aucun utilisateur trouvé.</td>
                </tr>

            }

            else
            {



                foreach (var user in Model)
                {
                    <tr>
                        <td style="word-break:break-word;">@user.Utilisateur.Name</td>
                        <td style="word-break:break-word;">@user.Utilisateur.FirstName</td>
                        <td>@user.Utilisateur.BirthDate.ToShortDateString()</td>
                        <td style="white-space:nowrap;">@user.Utilisateur.Email</td>
                        <td style="white-space:nowrap;">@user.Utilisateur.UserName</td>
                        <td style="word-break:break-word;">@user.Utilisateur.PhoneNumber</td>
                        <td>@user.Utilisateur.RegistrationDate.ToShortDateString()</td>
                        <td>@(user.Utilisateur.EmailConfirmed ? "Oui" : "Non")</td>
                        <td style="word-break:break-word;">@string.Join(", ", user.Roles)</td>
                        <td>
                            <a href="@Url.Action("Delete", "Users", new { id = user.Utilisateur.Id })" class="btn btn-danger btn-sm"
                               onclick="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                                <i class="bi bi-trash"></i> Supprimer
                            </a>
                            <a href="@Url.Action("Edit", "Users", new { id = user.Utilisateur.Id })" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil"></i> Modifier
                            </a>
                        </td>
                    </tr>
                }

            }

        </tbody>
    </table>
    @using (Html.BeginForm("TousLesUtilisateurs", "Users", FormMethod.Get))
    {
        <div class="input-group mb-3">
            <input type="text" name="recherche" class="form-control" placeholder="Rechercher un utilisateur..." value="@Request.QueryString["recherche"]" />
            <button class="btn btn-primary" type="submit">Rechercher</button>
        </div>

    }

</div>


