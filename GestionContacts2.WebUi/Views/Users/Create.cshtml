@model GestionContacts2.WebUi.Models.RegisterViewModel
@{
    ViewBag.Title = "Créer un utilisateur";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow" style="min-width:350px; max-width:500px; width:100%;">
        <div class="card-body">
            <h2 class="text-center mb-4">Créer un utilisateur</h2>
            @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Nom</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nom" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Prénom</label>
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Prénom" })
                    @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Courriel</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Adresse email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Téléphone</label>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Numéro de téléphone" })
                    @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Date de naissance</label>
                    @Html.TextBoxFor(m => m.BirthDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Nom d'utilisateur</label>
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Nom d'utilisateur" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Mot de passe</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mot de passe" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-4">
                    <label class="form-label fw-bold">Confirmer le mot de passe</label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmer le mot de passe" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary px-4 fw-bold">Créer</button>
                </div>
            }
        </div>
    </div>
</div>