@model GestionContacts2.WebUi.Models.RegisterViewModel
@{
    ViewBag.Title = "Créer un utilisateur";
}

<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    :root {
        --green: #22c55e;
        --dark: #0d1117;
        --white: #ffffff;
        --gray: #9ca3af;
        --border: #e5e7eb;
        --label: #6b7280;
    }

    .cu-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }

    .cu-card {
        display: grid;
        grid-template-columns: 0.8fr 1.2fr;
        width: 100%;
        max-width: 950px;
        border-radius: 4px;
        overflow: hidden;
        box-shadow: 0 25px 60px rgba(0,0,0,0.15);
        animation: cuFadeUp 0.6s ease both;
    }

    @@keyframes cuFadeUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ── PANNEAU GAUCHE ── */
    .cu-left {
        position: relative;
        background: var(--dark);
        padding: 3rem 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2rem;
        overflow: hidden;
    }

    .cu-building {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #0d1117 0%, #1a2332 40%, #0d1117 100%);
    }

        .cu-building::before {
            content: '';
            position: absolute;
            top: -10%;
            left: -20%;
            width: 140%;
            height: 80%;
            background: repeating-linear-gradient( -15deg, transparent 0px, transparent 28px, rgba(255,255,255,0.03) 28px, rgba(255,255,255,0.03) 30px );
            transform: skewY(-5deg);
        }

        .cu-building::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, rgba(13,17,23,0.2) 0%, rgba(13,17,23,0.75) 100%);
        }

    .cu-left-title {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 1.9rem;
        font-weight: 600;
        color: var(--white);
        line-height: 1.3;
        margin-bottom: 0.5rem;
    }

        .cu-left-title span {
            color: var(--green);
        }

    .cu-left-desc {
        position: relative;
        z-index: 2;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.82rem;
        color: var(--gray);
        line-height: 1.7;
    }

    .cu-feature {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: 0.75rem;
        animation: cuFadeUp 0.7s ease both;
    }

        .cu-feature:nth-child(3) {
            animation-delay: 0.1s;
        }

        .cu-feature:nth-child(4) {
            animation-delay: 0.2s;
        }

        .cu-feature:nth-child(5) {
            animation-delay: 0.3s;
        }

    .cu-feature-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--green);
        flex-shrink: 0;
    }

    .cu-feature-text {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.8rem;
        color: var(--gray);
    }

    /* ── PANNEAU DROIT ── */
    .cu-right {
        background: var(--white);
        padding: 2.5rem 2.8rem;
    }

        .cu-right h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.9rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 1.8rem;
            letter-spacing: -0.01em;
            text-align: left;
        }

    .cu-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
    }

    .cu-group {
        margin-bottom: 1.2rem;
    }

    .cu-label {
        display: block;
        font-size: 0.68rem;
        font-weight: 500;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--label);
        margin-bottom: 0.4rem;
        font-family: 'DM Sans', sans-serif;
    }

    .cu-input {
        width: 100%;
        border: none !important;
        border-bottom: 1.5px solid var(--border) !important;
        border-radius: 0 !important;
        padding: 0.5rem 0 !important;
        font-family: 'DM Sans', sans-serif !important;
        font-size: 0.85rem !important;
        color: #374151 !important;
        background: transparent !important;
        outline: none !important;
        box-shadow: none !important;
        transition: border-color 0.25s;
    }

        .cu-input::placeholder {
            color: #c9cdd4;
            font-size: 0.82rem;
        }

        .cu-input:focus {
            border-bottom-color: var(--green) !important;
            box-shadow: none !important;
            background: transparent !important;
        }

        /* Retirer le fond bleu du navigateur sur autofill */
        .cu-input:-webkit-autofill,
        .cu-input:-webkit-autofill:focus {
            -webkit-box-shadow: 0 0 0px 1000px white inset !important;
            box-shadow: 0 0 0px 1000px white inset !important;
        }

    .cu-error {
        font-size: 0.72rem;
        color: #ef4444;
        margin-top: 0.25rem;
        display: block;
    }

    .cu-btn {
        margin-top: 1.5rem;
        background: var(--green) !important;
        color: white !important;
        border: none !important;
        padding: 0.75rem 2.2rem !important;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem !important;
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        cursor: pointer;
        border-radius: 2px !important;
        transition: background 0.2s, transform 0.15s;
        display: block;
        width: 100%;
    }

        .cu-btn:hover {
            background: #16a34a !important;
            transform: translateY(-1px);
        }

    @@media (max-width: 700px) {
        .cu-card {
            grid-template-columns: 1fr;
        }

        .cu-left {
            min-height: 220px;
            padding: 2rem;
        }

        .cu-row {
            grid-template-columns: 1fr;
        }

        .cu-right {
            padding: 2rem 1.5rem;
        }
    }
</style>

<div class="cu-wrapper">
    <div class="cu-card">

        <!-- PANNEAU GAUCHE -->
        <div class="cu-left">
            <div class="cu-building"></div>

            <p class="cu-left-title">Créer un<br><span>nouveau compte</span></p>
            <p class="cu-left-desc">Remplissez le formulaire pour ajouter un utilisateur à la plateforme.</p>

            <div class="cu-feature">
                <div class="cu-feature-dot"></div>
                <span class="cu-feature-text">Accès sécurisé et chiffré</span>
            </div>
            <div class="cu-feature">
                <div class="cu-feature-dot"></div>
                <span class="cu-feature-text">Gestion des rôles et permissions</span>
            </div>
            <div class="cu-feature">
                <div class="cu-feature-dot"></div>
                <span class="cu-feature-text">Profil personnalisable</span>
            </div>
        </div>

        <!-- PANNEAU DROIT -->
        <div class="cu-right">
            <h2>Informations du compte</h2>

            @using (Html.BeginForm("Create", "Users", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <!-- Nom & Prénom -->
                <div class="cu-row">
                    <div class="cu-group">
                        <label class="cu-label">Nom <span style="color:#111">*</span></label>
                        @Html.TextBoxFor(m => m.Name, new { @class = "cu-input", placeholder = "Nom" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "cu-error" })
                    </div>
                    <div class="cu-group">
                        <label class="cu-label">Prénom <span style="color:#111">*</span></label>
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "cu-input", placeholder = "Prénom" })
                        @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "cu-error" })
                    </div>
                </div>

                <!-- Email & Téléphone -->
                <div class="cu-row">
                    <div class="cu-group">
                        <label class="cu-label">Courriel <span style="color:#111">*</span></label>
                        @Html.TextBoxFor(m => m.Email, new { @class = "cu-input", placeholder = "exemple@email.com" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "cu-error" })
                    </div>
                    <div class="cu-group">
                        <label class="cu-label">Téléphone</label>
                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "cu-input", placeholder = "+1 800 000000" })
                        @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "cu-error" })
                    </div>
                </div>

                <!-- Date de naissance & Nom d'utilisateur -->
                <div class="cu-row">
                    <div class="cu-group">
                        <label class="cu-label">Date de naissance</label>
                        @Html.TextBoxFor(m => m.BirthDate, "{0:yyyy-MM-dd}", new { @class = "cu-input", type = "date" })
                        @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "cu-error" })
                    </div>
                    <div class="cu-group">
                        <label class="cu-label">Nom d'utilisateur <span style="color:#111">*</span></label>
                        @Html.TextBoxFor(m => m.UserName, new { @class = "cu-input", placeholder = "Nom d'utilisateur" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "cu-error" })
                    </div>
                </div>

                <!-- Mot de passe & Confirmation -->
                <div class="cu-row">
                    <div class="cu-group">
                        <label class="cu-label">Mot de passe <span style="color:#111">*</span></label>
                        @Html.PasswordFor(m => m.Password, new { @class = "cu-input", placeholder = "••••••••" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "cu-error" })
                    </div>
                    <div class="cu-group">
                        <label class="cu-label">Confirmer <span style="color:#111">*</span></label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "cu-input", placeholder = "••••••••" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "cu-error" })
                    </div>
                </div>

                <button type="submit" class="cu-btn">Créer l'utilisateur</button>
            }
        </div>

    </div>
</div>
