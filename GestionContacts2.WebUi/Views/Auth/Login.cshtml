@model GestionContacts2.WebUi.Models.LoginViewModel
@{
    ViewBag.Title = "Connexion";
}



<div class="d-flex justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="card shadow" style="min-width:350px; max-width:400px; width:100%;">
        <div class="card-body">
            <div class="text-center mb-4">
                <img src="~/Content/Images/team.png" alt="Logo" style="max-width:120px; max-height:120px;" />
            </div>
            <h2 class="text-center mb-4">Connexion</h2>
            @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="form-group mb-3">
                    <label for="Email" class="form-label fw-bold" style="font-size:1.1rem;">Courriel</label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Entrez votre courriel" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <label for="Password" class="form-label fw-bold" style="font-size:1.1rem;">Mot de passe</label>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Entrez votre mot de passe" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group mb-3">
                    <div class="form-check">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input" })
                        @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label" })
                    </div>
                </div>

                <div class="form-group mb-3 text-center">
                    <button type="submit" class="btn btn-primary fw-bold px-4">Se connecter</button>
                    @Html.ActionLink("Mot de passe oublié ?", "ForgotPassword", "Auth", null, new { @class = "btn btn-link" })
                </div>
                <p class="text-center">@ViewBag.Test</p>
            }
        </div>
    </div>
</div>
