@model GestionContacts2.WebUi.Models.LoginViewModel
@{
    ViewBag.Title = "Connexion";
}

<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    :root {
        --green: #22c55e;
        --dark: #0d1117;
        --white: #ffffff;
        --gray: #9ca3af;
        --border: #e5e7eb;
        --label: #6b7280;
    }

    .login-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: stretch;
        justify-content: center;
        padding: 0;
    }

    .login-card {
        display: grid;
        grid-template-columns: 1fr 1fr;
        width: 100%;
        animation: loginFadeUp 0.6s ease both;
    }

    @@keyframes loginFadeUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ── PANNEAU GAUCHE ── */
    .login-left {
        position: relative;
        background: var(--dark);
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2rem;
        overflow: hidden;
    }

    .login-building {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #0d1117 0%, #1a2332 40%, #0d1117 100%);
    }

        .login-building::before {
            content: '';
            position: absolute;
            top: -10%;
            left: -20%;
            width: 140%;
            height: 80%;
            background: repeating-linear-gradient( -15deg, transparent 0px, transparent 28px, rgba(255,255,255,0.03) 28px, rgba(255,255,255,0.03) 30px );
            transform: skewY(-5deg);
        }

        .login-building::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, rgba(13,17,23,0.2) 0%, rgba(13,17,23,0.75) 100%);
        }

    .login-brand {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--white);
        letter-spacing: -0.01em;
    }

        .login-brand span {
            color: var(--green);
        }

    .login-left-title {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.2rem;
        font-weight: 600;
        color: var(--white);
        line-height: 1.2;
        margin: 0;
    }

        .login-left-title span {
            color: var(--green);
        }

    .login-left-desc {
        position: relative;
        z-index: 2;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.82rem;
        color: var(--gray);
        line-height: 1.7;
    }

    .login-feature {
        position: relative;
        z-index: 2;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .login-feature-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--green);
        flex-shrink: 0;
    }

    .login-feature-text {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.8rem;
        color: var(--gray);
    }

    .login-register-link {
        position: relative;
        z-index: 2;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        color: var(--gray);
        margin-top: auto;
    }

        .login-register-link a {
            color: var(--green);
            text-decoration: none;
            font-weight: 500;
            transition: opacity 0.2s;
        }

            .login-register-link a:hover {
                opacity: 0.75;
            }

    /* ── PANNEAU DROIT ── */
    .login-right {
        background: var(--white);
        padding: 3rem 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .login-right h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.3rem;
            letter-spacing: -0.01em;
        }

    .login-right-sub {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.72rem;
        color: var(--gray);
        letter-spacing: 0.08em;
        text-transform: uppercase;
        margin-bottom: 2.5rem;
    }

    .login-group {
        margin-bottom: 1.4rem;
    }

    .login-label {
        display: block;
        font-size: 0.68rem;
        font-weight: 500;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--label);
        margin-bottom: 0.4rem;
        font-family: 'DM Sans', sans-serif;
    }

    .login-input {
        width: 100%;
        border: none !important;
        border-bottom: 1.5px solid var(--border) !important;
        border-radius: 0 !important;
        padding: 0.5rem 0 !important;
        font-family: 'DM Sans', sans-serif !important;
        font-size: 0.88rem !important;
        color: #374151 !important;
        background: transparent !important;
        outline: none !important;
        box-shadow: none !important;
        transition: border-color 0.25s;
    }

        .login-input::placeholder {
            color: #c9cdd4;
            font-size: 0.82rem;
        }

        .login-input:focus {
            border-bottom-color: var(--green) !important;
            box-shadow: none !important;
        }

        .login-input:-webkit-autofill {
            -webkit-box-shadow: 0 0 0px 1000px white inset !important;
        }

    .login-error {
        font-size: 0.72rem;
        color: #ef4444;
        margin-top: 0.25rem;
        display: block;
    }

    /* Remember me */
    .login-remember {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin-bottom: 1.8rem;
    }

        .login-remember input[type="checkbox"] {
            width: 14px;
            height: 14px;
            accent-color: var(--green);
            cursor: pointer;
        }

        .login-remember label {
            font-family: 'DM Sans', sans-serif;
            font-size: 0.78rem;
            color: var(--gray);
            cursor: pointer;
            margin: 0;
        }

    /* Boutons */
    .login-btn {
        width: 100%;
        background: var(--green);
        color: white;
        border: none;
        padding: 0.8rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        border-radius: 2px;
        cursor: pointer;
        transition: background 0.2s, transform 0.15s;
        margin-bottom: 1rem;
    }

        .login-btn:hover {
            background: #16a34a;
            transform: translateY(-1px);
        }

    .login-forgot {
        display: block;
        text-align: center;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.75rem;
        color: var(--gray);
        text-decoration: none;
        transition: color 0.2s;
    }

        .login-forgot:hover {
            color: var(--green);
        }

    .login-test {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        color: #ef4444;
        text-align: center;
        margin-top: 0.5rem;
    }

    @@media (max-width: 700px) {
        .login-card {
            grid-template-columns: 1fr;
        }

        .login-left {
            min-height: 220px;
            padding: 2rem;
        }

        .login-right {
            padding: 2rem 1.5rem;
        }
    }
</style>

<main class="login-wrapper" aria-labelledby="login-title">
    <div class="login-card">

        <!-- PANNEAU GAUCHE -->
        <div class="login-left">
            <div class="login-building"></div>

            <p class="login-brand">Easy<span>Contacts</span></p>

            <div>
                <p class="login-left-title">Bon retour<br>parmi <span>nous</span></p>
            </div>

            <p class="login-left-desc">Connectez-vous pour accéder à vos contacts et gérer votre liste en toute sécurité.</p>

            <div class="login-feature">
                <div class="login-feature-dot"></div>
                <span class="login-feature-text">Accès sécurisé à vos contacts</span>
            </div>
            <div class="login-feature">
                <div class="login-feature-dot"></div>
                <span class="login-feature-text">Données privées et chiffrées</span>
            </div>
            <div class="login-feature">
                <div class="login-feature-dot"></div>
                <span class="login-feature-text">Accessible depuis n'importe quel appareil</span>
            </div>

            <p class="login-register-link">
                Pas encore de compte ?
                <a href="@Url.Action("Create", "Users")">S'inscrire gratuitement</a>
            </p>
        </div>

        <!-- PANNEAU DROIT -->
        <div class="login-right">
            <h2 id="login-title">Connexion</h2>
            <p class="login-right-sub">Entrez vos identifiants</p>

            @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="login-group">
                    <label class="login-label">Courriel <span style="color:#111">*</span></label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "login-input", placeholder = "exemple@email.com" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "login-error" })
                </div>

                <div class="login-group">
                    <label class="login-label">Mot de passe <span style="color:#111">*</span></label>
                    @Html.PasswordFor(m => m.Password, new { @class = "login-input", placeholder = "••••••••" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "login-error" })
                </div>

                <div class="login-remember">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "" })
                    @Html.LabelFor(m => m.RememberMe)
                </div>

                <button type="submit" class="login-btn">Se connecter</button>

                @Html.ActionLink("Mot de passe oublié ?", "ForgotPassword", "Auth", null, new { @class = "login-forgot" })

                if (ViewBag.Test != null)
                {
                    <p class="login-test">@ViewBag.Test</p>
                }
            }
        </div>

    </div>
</main>

