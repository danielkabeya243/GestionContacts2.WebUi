@model GestionContacts2.WebUi.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Mot de passe oublié";
}

<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    :root {
        --green: #22c55e;
        --dark: #0d1117;
        --white: #ffffff;
        --gray: #9ca3af;
        --border: #e5e7eb;
        --label: #6b7280;
    }

    .fp-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: stretch;
        justify-content: center;
        padding: 0;
    }

    .fp-card {
        display: grid;
        grid-template-columns: 1fr 1fr;
        width: 100%;
        animation: fpFadeUp 0.6s ease both;
    }

    @@keyframes fpFadeUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ── PANNEAU GAUCHE ── */
    .fp-left {
        position: relative;
        background: var(--dark);
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2rem;
        overflow: hidden;
    }

    .fp-building {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #0d1117 0%, #1a2332 40%, #0d1117 100%);
    }

        .fp-building::before {
            content: '';
            position: absolute;
            top: -10%;
            left: -20%;
            width: 140%;
            height: 80%;
            background: repeating-linear-gradient( -15deg, transparent 0px, transparent 28px, rgba(255,255,255,0.03) 28px, rgba(255,255,255,0.03) 30px );
            transform: skewY(-5deg);
        }

        .fp-building::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, rgba(13,17,23,0.2) 0%, rgba(13,17,23,0.75) 100%);
        }

    .fp-brand {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--white);
    }

        .fp-brand span {
            color: var(--green);
        }

    .fp-left-title {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.2rem;
        font-weight: 600;
        color: var(--white);
        line-height: 1.2;
        margin: 0;
    }

        .fp-left-title span {
            color: var(--green);
        }

    .fp-left-desc {
        position: relative;
        z-index: 2;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.82rem;
        color: var(--gray);
        line-height: 1.7;
    }

    .fp-steps {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .fp-step {
        display: flex;
        align-items: flex-start;
        gap: 0.9rem;
    }

    .fp-step-number {
        width: 22px;
        height: 22px;
        border-radius: 50%;
        background: rgba(34,197,94,0.15);
        border: 1px solid rgba(34,197,94,0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.65rem;
        font-weight: 500;
        color: var(--green);
        flex-shrink: 0;
        margin-top: 1px;
    }

    .fp-step-text {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        color: var(--gray);
        line-height: 1.5;
    }

    .fp-back {
        position: relative;
        z-index: 2;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.72rem;
        font-weight: 500;
        letter-spacing: 0.07em;
        text-transform: uppercase;
        color: var(--gray);
        text-decoration: none;
        margin-top: auto;
        transition: color 0.2s;
    }

        .fp-back:hover {
            color: var(--green);
        }

    /* ── PANNEAU DROIT ── */
    .fp-right {
        background: var(--white);
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .fp-right h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.3rem;
            letter-spacing: -0.01em;
        }

    .fp-right-sub {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.72rem;
        color: var(--gray);
        letter-spacing: 0.08em;
        text-transform: uppercase;
        margin-bottom: 2.5rem;
    }

    .fp-group {
        margin-bottom: 1.8rem;
    }

    .fp-label {
        display: block;
        font-size: 0.68rem;
        font-weight: 500;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--label);
        margin-bottom: 0.4rem;
        font-family: 'DM Sans', sans-serif;
    }

    .fp-input {
        width: 100%;
        border: none !important;
        border-bottom: 1.5px solid var(--border) !important;
        border-radius: 0 !important;
        padding: 0.5rem 0 !important;
        font-family: 'DM Sans', sans-serif !important;
        font-size: 0.88rem !important;
        color: #374151 !important;
        background: transparent !important;
        outline: none !important;
        box-shadow: none !important;
        transition: border-color 0.25s;
    }

        .fp-input::placeholder {
            color: #c9cdd4;
            font-size: 0.82rem;
        }

        .fp-input:focus {
            border-bottom-color: var(--green) !important;
            box-shadow: none !important;
        }

    .fp-error {
        font-size: 0.72rem;
        color: #ef4444;
        margin-top: 0.25rem;
        display: block;
    }

    .fp-hint {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.75rem;
        color: var(--gray);
        line-height: 1.6;
        margin-bottom: 2rem;
        padding: 0.8rem 1rem;
        background: #f9fafb;
        border-left: 2px solid var(--border);
        border-radius: 0 2px 2px 0;
    }

    .fp-btn {
        width: 100%;
        background: var(--green);
        color: white;
        border: none;
        padding: 0.8rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        border-radius: 2px;
        cursor: pointer;
        transition: background 0.2s, transform 0.15s;
        margin-bottom: 1rem;
    }

        .fp-btn:hover {
            background: #16a34a;
            transform: translateY(-1px);
        }

    .fp-login-link {
        display: block;
        text-align: center;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.75rem;
        color: var(--gray);
        text-decoration: none;
        transition: color 0.2s;
    }

        .fp-login-link:hover {
            color: var(--green);
        }

    @@media (max-width: 700px) {
        .fp-card {
            grid-template-columns: 1fr;
        }

        .fp-left {
            min-height: 220px;
            padding: 2rem;
        }

        .fp-right {
            padding: 2rem 1.5rem;
        }
    }
</style>

<main class="fp-wrapper" aria-labelledby="fp-title">
    <div class="fp-card">

        <!-- PANNEAU GAUCHE -->
        <div class="fp-left">
            <div class="fp-building"></div>

            <p class="fp-brand">Easy<span>Contacts</span></p>

            <p class="fp-left-title">Mot de passe<br><span>oublié ?</span></p>

            <p class="fp-left-desc">Pas de panique. Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.</p>

            <div class="fp-steps">
                <div class="fp-step">
                    <span class="fp-step-number">1</span>
                    <span class="fp-step-text">Entrez votre adresse email ci-contre</span>
                </div>
                <div class="fp-step">
                    <span class="fp-step-number">2</span>
                    <span class="fp-step-text">Vérifiez votre boîte de réception</span>
                </div>
                <div class="fp-step">
                    <span class="fp-step-number">3</span>
                    <span class="fp-step-text">Cliquez sur le lien et créez un nouveau mot de passe</span>
                </div>
            </div>

            <a href="@Url.Action("Login", "Auth")" class="fp-back">
                <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
                </svg>
                Retour à la connexion
            </a>
        </div>

        <!-- PANNEAU DROIT -->
        <div class="fp-right">
            <h2 id="fp-title">Réinitialiser</h2>
            <p class="fp-right-sub">Récupération de compte</p>

            <p class="fp-hint">
                Un email contenant un lien de réinitialisation sera envoyé à l'adresse associée à votre compte.
            </p>

            @using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="fp-group">
                    <label class="fp-label">Adresse email <span style="color:#111">*</span></label>
                    @Html.TextBoxFor(m => m.Email, new { @class = "fp-input", type = "email", placeholder = "exemple@email.com", autocomplete = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "fp-error" })
                </div>

                <button type="submit" class="fp-btn">Envoyer le lien de réinitialisation</button>

                <a href="@Url.Action("Login", "Auth")" class="fp-login-link">
                    Retour à la connexion
                </a>
            }
        </div>

    </div>
</main>
