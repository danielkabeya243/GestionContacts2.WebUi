@model GestionContacts2.WebUi.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Réinitialiser le mot de passe";
}

<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    :root {
        --green: #22c55e;
        --dark: #0d1117;
        --white: #ffffff;
        --gray: #9ca3af;
        --border: #e5e7eb;
        --label: #6b7280;
    }

    .rp-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: stretch;
        justify-content: center;
        padding: 0;
    }

    .rp-card {
        display: grid;
        grid-template-columns: 1fr 1fr;
        width: 100%;
        animation: rpFadeUp 0.6s ease both;
    }

    @@keyframes rpFadeUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ── PANNEAU GAUCHE ── */
    .rp-left {
        position: relative;
        background: var(--dark);
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2rem;
        overflow: hidden;
    }

    .rp-building {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #0d1117 0%, #1a2332 40%, #0d1117 100%);
    }

        .rp-building::before {
            content: '';
            position: absolute;
            top: -10%;
            left: -20%;
            width: 140%;
            height: 80%;
            background: repeating-linear-gradient( -15deg, transparent 0px, transparent 28px, rgba(255,255,255,0.03) 28px, rgba(255,255,255,0.03) 30px );
            transform: skewY(-5deg);
        }

        .rp-building::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, rgba(13,17,23,0.2) 0%, rgba(13,17,23,0.75) 100%);
        }

    .rp-brand {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--white);
    }

        .rp-brand span {
            color: var(--green);
        }

    .rp-left-title {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.2rem;
        font-weight: 600;
        color: var(--white);
        line-height: 1.2;
    }

        .rp-left-title span {
            color: var(--green);
        }

    .rp-left-desc {
        position: relative;
        z-index: 2;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.82rem;
        color: var(--gray);
        line-height: 1.7;
    }

    .rp-rules {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .rp-rule {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .rp-rule-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        background: var(--green);
        flex-shrink: 0;
    }

    .rp-rule-text {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        color: var(--gray);
    }

    .rp-steps {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .rp-step {
        display: flex;
        align-items: center;
        gap: 0.9rem;
    }

    .rp-step-done {
        width: 22px;
        height: 22px;
        border-radius: 50%;
        background: rgba(34,197,94,0.2);
        border: 1px solid var(--green);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

        .rp-step-done svg {
            width: 12px;
            height: 12px;
            color: var(--green);
        }

    .rp-step-active {
        width: 22px;
        height: 22px;
        border-radius: 50%;
        background: var(--green);
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.65rem;
        font-weight: 500;
        color: white;
        flex-shrink: 0;
    }

    .rp-step-text {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        color: var(--gray);
    }

        .rp-step-text.done {
            color: var(--white);
        }

        .rp-step-text.active {
            color: var(--green);
            font-weight: 500;
        }

    /* ── PANNEAU DROIT ── */
    .rp-right {
        background: var(--white);
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

        .rp-right h2 {
            font-family: 'Cormorant Garamond', serif;
            font-size: 2rem;
            font-weight: 600;
            color: #111827;
            margin-bottom: 0.3rem;
            letter-spacing: -0.01em;
        }

    .rp-right-sub {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.72rem;
        color: var(--gray);
        letter-spacing: 0.08em;
        text-transform: uppercase;
        margin-bottom: 2rem;
    }

    /* Email affiché */
    .rp-email-display {
        background: #f9fafb;
        border: 1px solid var(--border);
        border-radius: 3px;
        padding: 0.7rem 1rem;
        margin-bottom: 1.8rem;
        display: flex;
        align-items: center;
        gap: 0.6rem;
    }

        .rp-email-display svg {
            width: 15px;
            height: 15px;
            color: var(--gray);
            flex-shrink: 0;
        }

        .rp-email-display span {
            font-family: 'DM Sans', sans-serif;
            font-size: 0.82rem;
            color: #374151;
        }

    .rp-group {
        margin-bottom: 1.4rem;
    }

    .rp-label {
        display: block;
        font-size: 0.68rem;
        font-weight: 500;
        letter-spacing: 0.08em;
        text-transform: uppercase;
        color: var(--label);
        margin-bottom: 0.4rem;
        font-family: 'DM Sans', sans-serif;
    }

    .rp-input {
        width: 100%;
        border: none !important;
        border-bottom: 1.5px solid var(--border) !important;
        border-radius: 0 !important;
        padding: 0.5rem 0 !important;
        font-family: 'DM Sans', sans-serif !important;
        font-size: 0.88rem !important;
        color: #374151 !important;
        background: transparent !important;
        outline: none !important;
        box-shadow: none !important;
        transition: border-color 0.25s;
    }

        .rp-input::placeholder {
            color: #c9cdd4;
            font-size: 0.82rem;
        }

        .rp-input:focus {
            border-bottom-color: var(--green) !important;
            box-shadow: none !important;
        }

    .rp-error {
        font-size: 0.72rem;
        color: #ef4444;
        margin-top: 0.25rem;
        display: block;
    }

    .rp-btn {
        width: 100%;
        background: var(--green);
        color: white;
        border: none;
        padding: 0.8rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        border-radius: 2px;
        cursor: pointer;
        transition: background 0.2s, transform 0.15s;
        margin-top: 0.5rem;
    }

        .rp-btn:hover {
            background: #16a34a;
            transform: translateY(-1px);
        }

    @@media (max-width: 700px) {
        .rp-card {
            grid-template-columns: 1fr;
        }

        .rp-left {
            min-height: 220px;
            padding: 2rem;
        }

        .rp-right {
            padding: 2rem 1.5rem;
        }
    }
</style>

<main class="rp-wrapper" aria-labelledby="rp-title">
    <div class="rp-card">

        <!-- PANNEAU GAUCHE -->
        <div class="rp-left">
            <div class="rp-building"></div>

            <p class="rp-brand">Easy<span>Contacts</span></p>

            <p class="rp-left-title">Nouveau<br><span>mot de passe</span></p>

            <p class="rp-left-desc">Choisissez un mot de passe sécurisé pour protéger votre compte.</p>

            <div class="rp-rules">
                <div class="rp-rule">
                    <div class="rp-rule-dot"></div>
                    <span class="rp-rule-text">Au moins 8 caractères</span>
                </div>
                <div class="rp-rule">
                    <div class="rp-rule-dot"></div>
                    <span class="rp-rule-text">Une majuscule et une minuscule</span>
                </div>
                <div class="rp-rule">
                    <div class="rp-rule-dot"></div>
                    <span class="rp-rule-text">Un chiffre ou caractère spécial</span>
                </div>
            </div>

            <div class="rp-steps">
                <div class="rp-step">
                    <div class="rp-step-done">
                        <svg fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <span class="rp-step-text done">Email vérifié</span>
                </div>
                <div class="rp-step">
                    <div class="rp-step-done">
                        <svg fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <span class="rp-step-text done">Lien de réinitialisation validé</span>
                </div>
                <div class="rp-step">
                    <div class="rp-step-active">3</div>
                    <span class="rp-step-text active">Créer un nouveau mot de passe</span>
                </div>
            </div>
        </div>

        <!-- PANNEAU DROIT -->
        <div class="rp-right">
            <h2 id="rp-title">Réinitialiser</h2>
            <p class="rp-right-sub">Créer un nouveau mot de passe</p>

            @using (Html.BeginForm("ResetPasswordPost", "Auth", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Code)
                @Html.HiddenFor(m => m.Email)
                @Html.ValidationSummary(true, "", new { @class = "rp-error" })

                <!-- Email affiché -->
                <div class="rp-email-display">
                    <svg fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <span>@Model.Email</span>
                </div>

                <div class="rp-group">
                    <label class="rp-label">Nouveau mot de passe <span style="color:#111">*</span></label>
                    @Html.PasswordFor(m => m.Password, new { @class = "rp-input", placeholder = "••••••••", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "rp-error" })
                </div>

                <div class="rp-group">
                    <label class="rp-label">Confirmer le mot de passe <span style="color:#111">*</span></label>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "rp-input", placeholder = "••••••••", autocomplete = "new-password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "rp-error" })
                </div>

                <button type="submit" class="rp-btn">Réinitialiser le mot de passe</button>
            }
        </div>

    </div>
</main>
