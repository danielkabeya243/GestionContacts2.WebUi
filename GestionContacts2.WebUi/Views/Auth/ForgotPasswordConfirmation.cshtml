@{
    ViewBag.Title = "Email envoyé";
}

<link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=DM+Sans:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    :root {
        --green: #22c55e;
        --dark: #0d1117;
        --white: #ffffff;
        --gray: #9ca3af;
        --border: #e5e7eb;
    }

    .fpc-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: stretch;
        justify-content: center;
        padding: 0;
    }

    .fpc-card {
        display: grid;
        grid-template-columns: 1fr 1fr;
        width: 100%;
        animation: fpcFadeUp 0.6s ease both;
    }

    @@keyframes fpcFadeUp {
        from {
            opacity: 0;
            transform: translateY(24px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* ── PANNEAU GAUCHE ── */
    .fpc-left {
        position: relative;
        background: var(--dark);
        padding: 3rem 2.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2rem;
        overflow: hidden;
    }

    .fpc-building {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, #0d1117 0%, #1a2332 40%, #0d1117 100%);
    }

        .fpc-building::before {
            content: '';
            position: absolute;
            top: -10%;
            left: -20%;
            width: 140%;
            height: 80%;
            background: repeating-linear-gradient( -15deg, transparent 0px, transparent 28px, rgba(255,255,255,0.03) 28px, rgba(255,255,255,0.03) 30px );
            transform: skewY(-5deg);
        }

        .fpc-building::after {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(to bottom, rgba(13,17,23,0.2) 0%, rgba(13,17,23,0.75) 100%);
        }

    .fpc-brand {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 1.4rem;
        font-weight: 600;
        color: var(--white);
    }

        .fpc-brand span {
            color: var(--green);
        }

    .fpc-left-title {
        position: relative;
        z-index: 2;
        font-family: 'Cormorant Garamond', serif;
        font-size: 2.2rem;
        font-weight: 600;
        color: var(--white);
        line-height: 1.2;
    }

        .fpc-left-title span {
            color: var(--green);
        }

    .fpc-left-desc {
        position: relative;
        z-index: 2;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.82rem;
        color: var(--gray);
        line-height: 1.7;
    }

    .fpc-steps {
        position: relative;
        z-index: 2;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .fpc-step {
        display: flex;
        align-items: center;
        gap: 0.9rem;
    }

    .fpc-step-done {
        width: 22px;
        height: 22px;
        border-radius: 50%;
        background: rgba(34,197,94,0.2);
        border: 1px solid var(--green);
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

        .fpc-step-done svg {
            width: 12px;
            height: 12px;
            color: var(--green);
        }

    .fpc-step-pending {
        width: 22px;
        height: 22px;
        border-radius: 50%;
        background: rgba(255,255,255,0.05);
        border: 1px solid rgba(255,255,255,0.15);
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.65rem;
        color: var(--gray);
        flex-shrink: 0;
    }

    .fpc-step-text {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        color: var(--gray);
    }

        .fpc-step-text.done {
            color: var(--white);
        }

    /* ── PANNEAU DROIT ── */
    .fpc-right {
        background: var(--white);
        padding: 3rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    /* Icône succès */
    .fpc-success-icon {
        width: 72px;
        height: 72px;
        border-radius: 50%;
        background: rgba(34,197,94,0.1);
        border: 2px solid rgba(34,197,94,0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 2rem;
        animation: fpcPop 0.5s ease both 0.3s;
    }

    @@keyframes fpcPop {
        from {
            transform: scale(0.5);
            opacity: 0;
        }

        to {
            transform: scale(1);
            opacity: 1;
        }
    }

    .fpc-success-icon svg {
        width: 32px;
        height: 32px;
        color: var(--green);
    }

    .fpc-right h2 {
        font-family: 'Cormorant Garamond', serif;
        font-size: 2rem;
        font-weight: 600;
        color: #111827;
        margin-bottom: 0.75rem;
        letter-spacing: -0.01em;
    }

    .fpc-right p {
        font-family: 'DM Sans', sans-serif;
        font-size: 0.85rem;
        color: var(--gray);
        line-height: 1.7;
        max-width: 340px;
        margin-bottom: 2.5rem;
    }

    .fpc-hint {
        background: #f9fafb;
        border: 1px solid var(--border);
        border-radius: 3px;
        padding: 1rem 1.2rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        color: #6b7280;
        line-height: 1.6;
        max-width: 360px;
        margin-bottom: 2rem;
        text-align: left;
    }

        .fpc-hint strong {
            color: #374151;
            font-weight: 500;
        }

    .fpc-btn {
        background: var(--green);
        color: white;
        border: none;
        padding: 0.75rem 2.5rem;
        font-family: 'DM Sans', sans-serif;
        font-size: 0.78rem;
        font-weight: 500;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        border-radius: 2px;
        text-decoration: none;
        display: inline-block;
        transition: background 0.2s, transform 0.15s;
    }

        .fpc-btn:hover {
            background: #16a34a;
            color: white;
            transform: translateY(-1px);
        }

    @@media (max-width: 700px) {
        .fpc-card {
            grid-template-columns: 1fr;
        }

        .fpc-left {
            min-height: 220px;
            padding: 2rem;
        }

        .fpc-right {
            padding: 2rem 1.5rem;
        }
    }
</style>

<main class="fpc-wrapper">
    <div class="fpc-card">

        <!-- PANNEAU GAUCHE -->
        <div class="fpc-left">
            <div class="fpc-building"></div>

            <p class="fpc-brand">Easy<span>Contacts</span></p>

            <p class="fpc-left-title">Email<br><span>envoyé !</span></p>

            <p class="fpc-left-desc">Les instructions de réinitialisation ont été envoyées à votre adresse email.</p>

            <div class="fpc-steps">
                <div class="fpc-step">
                    <div class="fpc-step-done">
                        <svg fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <span class="fpc-step-text done">Email entré et validé</span>
                </div>
                <div class="fpc-step">
                    <div class="fpc-step-done">
                        <svg fill="none" stroke="currentColor" stroke-width="2.5" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <span class="fpc-step-text done">Email de réinitialisation envoyé</span>
                </div>
                <div class="fpc-step">
                    <div class="fpc-step-pending">3</div>
                    <span class="fpc-step-text">Cliquez sur le lien dans l'email</span>
                </div>
            </div>
        </div>

        <!-- PANNEAU DROIT -->
        <div class="fpc-right">
            <div class="fpc-success-icon">
                <svg fill="none" stroke="currentColor" stroke-width="1.8" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
            </div>

            <h2>Vérifiez votre email</h2>
            <p>
                Un lien de réinitialisation a été envoyé à votre adresse email. Vérifiez votre boîte de réception et suivez les instructions.
            </p>

            <div class="fpc-hint">
                <strong>Vous ne trouvez pas l'email ?</strong><br>
                Vérifiez votre dossier spam ou courrier indésirable. Le lien est valide pendant <strong>24 heures</strong>.
            </div>

            <a href="@Url.Action("Login", "Auth")" class="fpc-btn">
                Retour à la connexion
            </a>
        </div>

    </div>
</main>
